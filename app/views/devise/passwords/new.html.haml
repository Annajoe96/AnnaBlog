.container
  .row
    .col-12.offset-md-4.col-md-4
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .h3.text-center.font-weight-normal.mt-4
          Find your Blog account
        .row
          .col
            = f.label :email
            = f.email_field :email, autofocus: true, autocomplete: "email", autocorrect: "off", autocapitalize: "off", class: 'form-control', required: true, placeholder: 'Enter your email...'

            = f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg btn-block mt-3"

            .text-center.mt-3
              = render "devise/shared/links"
