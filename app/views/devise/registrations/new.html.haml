.container
  .row
    .col-12.offset-md-4.col-md-4

      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        %h1.h3.text-center.font-weight-normal.mt-4 Create your account
        %p.hint-text.text-center Create your account. It's free and only takes a minute.
        = render "devise/shared/error_messages", resource: resource
        .form-group
          .row
            .col
              = f.text_field :firstname, autofocus: true, autocomplete: "first name", class: 'form-control', required: true, placeholder: "First Name"
            .col
              = f.text_field :lastname, autofocus: true, autocomplete: "last name", class: 'form-control', required: true, placeholder: "Last Name"
        .form-group
          = f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true, placeholder: "Email", type: "email"
        .form-group
          - if @minimum_password_length
            %em
              = f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', required: true, placeholder: "Password", type: "password"
              (#{@minimum_password_length} characters minimum)
        .form-group
          = f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: 'form-control', required: true, placeholder: "Password confirmation", type: "password"
        .actions
          = f.submit "Register Now", class: "btn btn-success btn-lg btn-block"
          = render "devise/shared/links"
